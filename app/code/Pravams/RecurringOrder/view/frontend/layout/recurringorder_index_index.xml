<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" >
    <body>
        <referenceContainer name="header.panel.wrapper" remove="true"/>
        <referenceContainer name="top.search" remove="true"/>
        <referenceContainer name="minicart" remove="true"/>
        <referenceContainer name="page.top" remove="true"/>
        <referenceContainer name="footer-container" remove="true"/>
        <referenceContainer name="content">
            <block name="RecurringOrder.checkout" class="Pravams\RecurringOrder\Block\Checkout" template="checkout/onepage.phtml" cacheable="false"/>
        </referenceContainer>    
     </body>
</page>
